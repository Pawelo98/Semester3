def nTy[A](lista : List[A], n : Int) = {
	if(lista==Nil) throw new Exception ("niepoprawny argument")
	def helper(lista1 : List[A], n : Int) : A =
		(lista1, n) match {
		case(Nil,_)=>throw new Exception ("niepoprawny argument")
		case(h::_,0)=> h
		case(_::t,n)=> helper(t, n-1)
		}
	helper(lista, n)
}

